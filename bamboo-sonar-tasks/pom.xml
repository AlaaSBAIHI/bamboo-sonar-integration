<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<artifactId>bamboo-sonar-integration</artifactId>
		<groupId>com.marvelution.bamboo.plugins</groupId>
		<version>1.0.0</version>
	</parent>
	<artifactId>bamboo-sonar-tasks</artifactId>
	<packaging>jar</packaging>

	<name>Bamboo Sonar Integration :: Tasks Module</name>
	<description>Set of Sonar related tasks for Atlassian Bamboo</description>
	<url>http://apidocs.marvelution.com/${project.parent.artifactId}/${project.parent.version}/${project.artifactId}</url>

	<scm>
		<connection>scm:svn:http://svn.marvelution.com/atlassian/bamboo-sonar-integration/tags/bamboo-sonar-integration-1.0.0/bamboo-sonar-tasks</connection>
		<developerConnection>scm:svn:http://svn.marvelution.com/atlassian/bamboo-sonar-integration/tags/bamboo-sonar-integration-1.0.0/bamboo-sonar-tasks</developerConnection>
		<url>http://fisheye.marvelution.com/browse/public/atlassian/bamboo-sonar-integration/tags/bamboo-sonar-integration-1.0.0/bamboo-sonar-tasks</url>
	</scm>

	<properties>
		<atlassian.plugin.name>Marvelution Bamboo Sonar Tasks Plugin</atlassian.plugin.name>
		<atlassian.plugin.key>${atlassian.plugin.key.base}.tasks</atlassian.plugin.key>
	</properties>

	<dependencies>
		<dependency>
			<groupId>com.atlassian.bamboo.plugins.maven</groupId>
			<artifactId>atlassian-bamboo-plugin-maven</artifactId>
			<version>${atlassian.bamboo.version}</version>
			<type>jar</type>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.codehaus.sonar</groupId>
			<artifactId>sonar-ws-client</artifactId>
			<version>2.8</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>
	</dependencies>

	<build>
		<!-- This will automatically put POM settings into atlassian-plugin.xml when building.  -->
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<excludes>
					<exclude>atlassian-plugin.xml</exclude>
					<exclude>**/plugin.properties</exclude>
				</excludes>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
				<includes>
					<include>atlassian-plugin.xml</include>
					<include>**/plugin.properties</include>
				</includes>
			</resource>
		</resources>
		<!-- TODO Configure the Shade plugin to package the Sonar WS Client with dependencies in a uber jar -->
	</build>
</project>
